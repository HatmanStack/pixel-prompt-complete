{
  "name": "pixel-prompt-complete",
  "version": "1.0.0",
  "description": "Full-stack serverless text-to-image generation platform",
  "private": true,
  "type": "module",
  "scripts": {
    "start": "cd frontend && npm run dev",
    "test": "cd frontend && npx vitest run --passWithNoTests",
    "test:backend": "cd backend && PYTHONPATH=src pytest ../tests/backend -v --tb=short",
    "lint": "cd frontend && npm run lint",
    "lint:backend": "uvx ruff check backend/src/",
    "check": "npm run lint && npm run lint:backend && npm test && npm run test:backend",
    "deploy": "node ./backend/scripts/deploy.js",
    "prepare": "husky"
  },
  "lint-staged": {
    "frontend/src/**/*.{ts,tsx,js,jsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "backend/src/**/*.py": [
      "uvx ruff check --fix",
      "uvx ruff format"
    ]
  },
  "keywords": [
    "aws",
    "lambda",
    "sam",
    "react",
    "vite",
    "ai",
    "image-generation"
  ],
  "author": "",
  "license": "Apache-2.0",
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "autoprefixer": "^10.4.22",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.17"
  }
}
